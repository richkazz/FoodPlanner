@model string

@{
    ViewData["Title"] = "Forgot Password";
    Layout = "~/Views/Shared/_ModalLayout.cshtml";
}
<style>
    .card-transparent {
        background-color: rgba(255, 255, 255, 0.5);
    }
</style>

<div class="hold-transition login-page" style="background: url('@Url.Content("~/Pic/plantain-1.jpg")'); background-size:cover;">
    <div class="login-box">
        <div class="login-logo">
            <a asp-controller="Account" asp-action="Login"><b>Food</b>Scheduler</a>
        </div>
        <!-- /.login-logo -->
        <div class="card card-transparent">
            <div class="card-body login-card-body card-transparent">
                <p class="login-box-msg">You forgot your password? Here you can easily retrieve a new password.</p>

                <form asp-action="ForgotPassword" method="post">
                    <div class="input-group mb-3">
                        <input name="email" type="email" class="form-control" placeholder="Email">
                        <div class="input-group-append">
                            <div class="input-group-text">
                                <span class="fas fa-envelope"></span>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-12">
                            <button type="submit" class="btn btn-primary btn-block">Request new password</button>
                        </div>
                        <!-- /.col -->
                    </div>
                </form>

                <p class="mt-3 mb-1">
                    <a asp-controller="Account" asp-action="Login" >Login</a>

                </p>
                <p class="mb-0">

                    <a asp-controller="Register" asp-action="Create" class="text-center">Register a new membership</a>
                </p>
            </div>
            <!-- /.login-card-body -->
        </div>
    </div>
</div>

