@model ResetPassword

@{
    ViewData["Title"] = "Reset Password";
    Layout = "~/Views/Shared/_ModalLayout.cshtml";
}
    <style>
        .card-transparent {
            background-color: rgba(255, 255, 255, 0.5);
        }
    </style>


    <div class="hold-transition login-page" style="background: url('@Url.Content("~/Pic/plantain-1.jpg")'); background-size:cover;">

        <div class="login-box">
            <div class="login-logo">
                <a href="../../index2.html"><b>Food</b>Scheduler</a>
            </div>
            <!-- /.login-logo -->
            <div class="card card-transparent">
                <div class="card-body login-card-body card-transparent">
                    <p class="login-box-msg">You are only one step a way from your new password, recover your password now.</p>

                    <div class="text-danger" asp-validation-summary="All"></div>
                    <form asp-action="ResetPassword" method="post">
                        <div class="input-group mb-3">
                            <input asp-for="Password" type="password" class="form-control" placeholder="Password">
                            <div class="input-group-append">
                                <div class="input-group-text">
                                    <span class="fas fa-lock"></span>
                                </div>
                            </div>
                        </div>
                        <div class="input-group mb-3">
                            <input asp-for="ConfirmPassword" type="password" class="form-control" placeholder="Confirm Password">
                            <div class="input-group-append">
                                <div class="input-group-text">
                                    <span class="fas fa-lock"></span>
                                </div>
                            </div>
                        </div>
                        <input type="hidden" asp-for="Email" class="form-control" />
                        <input type="hidden" asp-for="Token" class="form-control" />
                        <div class="row">
                            <div class="col-12">
                                <button type="submit" class="btn btn-primary btn-block">Change password</button>
                            </div>
                            <!-- /.col -->
                        </div>
                    </form>

                    <p class="mt-3 mb-1">
                        <a asp-controller="Account" asp-action="Login" class="nav-link">Login</a>

                    </p>
                </div>
                <!-- /.login-card-body -->
            </div>
        </div>

    </div>