@model Login
@{

}

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>AdminLTE 3 | General UI</title>
    <!-- Tell the browser to be responsive to screen width -->
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- Bootstrap 4 -->
    <link href="~/plugins/fontawesome-free/css/all.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://code.ionicframework.com/ionicons/2.0.1/css/ionicons.min.css">
    <link href="~/dist/css/adminlte.min.css" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700" rel="stylesheet">
    <style>
        .card-transparent {
            background-color: rgba(255, 255, 255, 0.5);
        }
  
    </style>
</head>

<body class="hold-transition login-page" style="background: url('@Url.Content("~/Pic/plantain-1.jpg")'); background-size:cover;">

    <div >


        <!-- Content Wrapper. Contains page content -->
        <div>



            <!-- Main content -->




            <a asp-controller="FAQs" asp-action="UserIndex" class="text-center">FAQ</a>
            <a asp-controller="Contactus" asp-action="Create" class="text-center">Contact Us</a>

            <!-- /.card-header -->
            <div>
                <div class="login-box card-transparent" style="margin:auto; top:200px">
                    <div class="text-danger" asp-validation-summary="All"></div>

                    <div class="login-logo">
                        <a href="../../index2.html"><b>Food</b>Scheduler</a>
                    </div>
                    <!-- /.login-logo -->
                    <div class="card card-transparent ">
                        <div class="card-body  card-transparent">
                            <p class="login-box-msg">Sign in to start your session</p>

                            <form asp-action="Login" method="post">
                                <input type="hidden" asp-for="ReturnUrl" />
                                <div class="input-group mb-3">
                                    <input asp-for="Email" type="email" class="form-control" placeholder="Email">
                                    <div class="input-group-append">
                                        <div class="input-group-text">
                                            <span class="fas fa-envelope"></span>
                                        </div>
                                    </div>
                                </div>
                                <div class="input-group mb-3">
                                    <input asp-for="Password" type="password" class="form-control" placeholder="Password">
                                    <div class="input-group-append">
                                        <div class="input-group-text">
                                            <span class="fas fa-lock"></span>
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-8">
                                        <div class="icheck-primary">
                                            <input type="checkbox" id="remember">
                                            <label for="remember">
                                                Remember Me
                                            </label>
                                        </div>
                                    </div>
                                    <!-- /.col -->
                                    <div class="col-4">
                                        <button type="submit" class="btn btn-primary btn-block">Sign In</button>
                                    </div>
                                    <!-- /.col -->
                                </div>
                            </form>

                            <div class="social-auth-links text-center mb-3">
                                <p>- OR -</p>
                                <a href="#" class="btn btn-block btn-primary">
                                    <i class="fab fa-facebook mr-2"></i> Sign in using Facebook
                                </a>
                                <a href="#" class="btn btn-block btn-danger">
                                    <i class="fab fa-google-plus mr-2"></i> Sign in using Google+
                                </a>
                            </div>
                            <!-- /.social-auth-links -->

                            <p class="mb-1">
                                <a asp-action="ForgotPassword">I forgot my password</a>
                            </p>
                            <p class="mb-0">
                                <a asp-controller="Register" asp-action="Create" class="text-center">Register a new membership</a>
                            </p>
                        </div>
                        <!-- /.login-card-body -->
                    </div>
                </div>
            </div>
            <!-- /.card-body -->
            <!-- /.content -->
        </div>

    </div>

    <script src="~/plugins/jquery/jquery.min.js"></script>
    <script src="~/plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/dist/js/adminlte.min.js"></script>
    <script src="~/dist/js/demo.js"></script>

</body>

