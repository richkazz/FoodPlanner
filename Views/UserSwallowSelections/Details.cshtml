@model FoodPlanner.Models.UserFoodSelectionCategory.UserSwallowSelection

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_ModalLayout.cshtml";
    var inguserswallow = (List<FoodPlanner.Models.Swallows.Swallow>)ViewData["userswallow"];
    int indUserSwallowSelection = (int)ViewData["indUserSwallowSelection"];
}

<div class="modal-header">




    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
</div>
<div class="modal-body p-4" id="modalBody">
    <div>
        <h4>Swallow</h4>
        <hr />

        <dl class="row">
            @Html.HiddenFor(x => x.Id)
            @Html.HiddenFor(x => x.UserId)
            <dt class="col-sm-4"> @Html.DisplayNameFor(model => model.UserSwallowId)</dt>
            <dd class="col-sm-8"> @inguserswallow[indUserSwallowSelection].Name</dd>



        </dl>
    </div>

</div>
<div class="modal-footer">
    <button type="button" class="btn btn-secondary waves-effect" data-dismiss="modal">Close</button>
</div>