@model FoodPlanner.Models.Swallows.SwallowNutrient

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_ActionLayout.cshtml";
    var ingswallow = (List<FoodPlanner.Models.Swallows.Swallow>)ViewData["swallows"];
    var mainIngrdient = (List<FoodPlanner.Models.MainIngredients.MainIngredient>)ViewData["mainIngredients"];
    int indSwallow = (int)ViewData["indSwallow"];
    int indSwallowNutrient = (int)ViewData["indSwallowNutrient"];
}


<div >
    <section class="content">
        <div class="container-fluid">
            <div class="card card-default">

                <!-- /.card-header -->
                <div class="card-body">
                    <h3 class="text-danger">Are you sure you want to delete this?</h3>

                    <dl class="row">
                        <dt class="col-sm-4"> @Html.DisplayNameFor(model => model.SwallowName)</dt>
                        <dd class="col-sm-8"> @ingswallow[indSwallowNutrient].Name</dd>
                        <dt class="col-sm-4"> @Html.DisplayNameFor(model => model.MainIngredientsId)</dt>
                        <dd class="col-sm-8">@mainIngrdient[indSwallow].Name</dd>

                    </dl>
                    <form asp-action="Delete">
                        <input type="hidden" asp-for="Id" />
                        <input type="submit" value="Delete" class="btn btn-default" /> |
                        <a asp-action="Index">Back to List</a>
                    </form>
                </div>
                <!-- /.card-body -->
            </div>
            <!-- /.card -->
        </div>
    </section>
</div>
