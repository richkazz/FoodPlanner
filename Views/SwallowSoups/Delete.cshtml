@model FoodPlanner.Models.SoupCategory.SwallowSoup

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_ActionLayout.cshtml";
    var inggraindishsoup = (List<FoodPlanner.Models.Soups.Soup>)ViewData["graindishsoup"];
    int indGrainDishSoup = (int)ViewData["indGrainDishSoup"];

}


<div >
    <div class="container container-fluid">

    <div class="card" style="background-color:rgba(255, 255, 255, 0.5)">

        <!-- /.card-header -->
        <div class="card-body">
            <h3 class="text-danger">Are you sure you want to delete this?</h3>

            <dl class="row">
                <dt class="col-sm-4"> @Html.DisplayNameFor(model => model.SwallowSoupId)</dt>
                <dd class="col-sm-8"> @inggraindishsoup[indGrainDishSoup].Name</dd>


            </dl>
            <form asp-action="Delete">
                <input type="hidden" asp-for="Id" />
                <input type="submit" value="Delete" class="btn btn-default" /> |
                <a asp-action="Index">Back to List</a>
            </form>
        </div>
        <!-- /.card-body -->
    </div>
    <!-- /.card -->
</div>
</div>