@model FoodPlanner.Models.SoupCategory.SwallowSoup

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_ActionLayout.cshtml";
    var inggraindishsoup = (List<FoodPlanner.Models.Soups.Soup>)ViewData["graindishsoup"];

}

<div >

    <div class="container container-fluid">

        <div class="card" style="background-color:rgba(255, 255, 255, 0.5);width:50%;height:50%;margin-left:20%;">

            <form asp-action="Create">
                <div class="card-header">
                    <h3 class="card-title"></h3>


                </div>
                <!-- /.card-header -->
                <div class="card-body">
                    <div >
                        <div >

                            <div class="form-group">
                                <label>Swalllow Soup</label>
                                <select name="grainselect" class="form-control select2bs4" style="width: 100%;">

                                    @foreach (var graindishsoupselect in inggraindishsoup)
                                    {
                                        <option value="@graindishsoupselect.Id">@graindishsoupselect.Name</option>

                                    }
                                </select>
                            </div>
                            <!-- /.form-group -->
                        </div>
                        <!-- /.col -->
                    </div>
                    <div >
                        <div class=" float-left">

                            <div class="form-group">
                                <input type="submit" value="Create" class="btn btn-default" />
                            </div>

                        </div>
                        <div class=" float-right">
                            <div>
                                <a asp-action="Index">Back to List</a>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- /.card-body -->



            </form>
        </div>


    </div>

</div>
