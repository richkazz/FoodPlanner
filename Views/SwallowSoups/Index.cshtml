@model IEnumerable<FoodPlanner.Models.SoupCategory.SwallowSoup>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_ActionLayout.cshtml";
    var inggraindishsoup = (List<FoodPlanner.Models.Soups.Soup>)ViewData["graindishsoup"];
    int i = 1;

}


    <div class="container container-fluid">

        <div class="card" style="background-color:rgba(255, 255, 255, 0.5)">
            <!-- /.card-header -->

            <div class="card-body">
                <p>
                    <a asp-action="Create" class="btn btn-primary btn-sm">Add Swallow Soup</a>
                </p>

                <table id="example1" class="table table-bordered table-striped">
                    <thead>

                        <tr>

                            <th>S/N</th>
                            <th>
                                @Html.DisplayNameFor(model => model.SwallowSoupId)
                            </th>


                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {

                            int gra = 0;
                            @foreach (var ing in inggraindishsoup)
                            {
                                if (item.SwallowSoupId == ing.Id)
                                {
                                    break;
                                }
                                gra++;
                            }
                            <tr>

                                <td>@i</td>
                                <td>
                                    @inggraindishsoup[gra].Name
                                </td>



                                <td>
                                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                                </td>
                            </tr>
                            i++;
                        }
                    </tbody>
                </table>
            </div>
            <!-- /.card-body -->
        </div>
    </div>



